<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darkknightsds.theprinceexperience.ui.RecommendationFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/genreImage"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/love_symbol_black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/playlistHeader"
            android:layout_width="169dp"
            android:layout_height="39dp"
            android:text="Playlists"
            android:textSize="27sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/genreImage"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/playlistDetails"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Playlist Details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistHeader" />

        <TextView
            android:id="@+id/albumsHeader"
            android:layout_width="169dp"
            android:layout_height="39dp"
            android:text="Albums"
            android:textSize="27sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playlistDetails"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/albumDetails"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Album Details"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/albumsHeader" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
